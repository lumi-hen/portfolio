<%- include('../layouts/adminheader.ejs') %>

<div class="login section">
	<h2 class="section__title login__title"><%= title %></h2>
    <span class="section__subtitle"></span>
    <hr>
	<div class="login__container grid">
		<a href="/admin/categories" class="button button--flex add__button--admin">Back to all categories</a>
		<form method="post" action="/admin/categories/edit-category/<%= id %>" class="login__form grid">
			<div class="login__content">
                <label class="login__label" for="title">Title</label>
                <input type="text" class="login__input" name="title"  placeholder="Title" value="<%= title %>">
			</div>


			<button type="submit" class="button button--flex login__button">Submit</button>
		</form>
	</div>
</div>

